<div class="view-container">
    <div>
        <h4>Beschreibung</h4>
        <div>{{ component.description }}</div>
        <h4>Category</h4>
        <div class="text-view">
            {% for category in component.categories %}
                <div>
                    {{ category.name }}
                </div>
            {% endfor %}
        </div>
        <h4>Tags</h4>
        <div class="text-view">
            {% for tag in component.tags %}
                <div>
                    {{ tag.name }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div>
        <img src="{{ asset('/img/placeholder.jpg') }}" alt="placeholder" class="rounded"> 
    </div>
</div>     