{% import '02-molecules/item-form.html.twig' as itemForm %}

{% import '02-molecules/component-form.html.twig' as componentForm %}

{{ form_start(form) }}
<div class="row">
    <div class="col-sm-12 col-md-8">
        <div class="form-group">
        {{ form_row(form.title, {
            'attr': {'class': 'form-control'}
        }) }}
        </div>
        <div class="form-group">
        {{ form_row(form.description, {
            'attr': {'class': 'form-control'}
        }) }}
        </div>
        <h3>Tags</h3>
        <ul class="view-tags" data-prototype="{{ itemForm.printItemRow(form.tags.vars.prototype)|e('html_attr') }}">
            {% for tag in form.tags %}
                <li>
                    {{ itemForm.printItemRow(tag) }}
                </li>
            {% endfor %}
        </ul>
        <h3>Categories</h3>
        <ul class="categories" data-prototype="{{ itemForm.printItemRow(form.categories.vars.prototype)|e('html_attr') }}">
            {% for category in form.categories %}
                <li>
                    {{ itemForm.printItemRow(category) }}
                </li>
            {% endfor %}
        </ul>
        <h3>Components</h3>
        <ul class="components" data-prototype="{{ componentForm.printItemRow(form.components.vars.prototype)|e('html_attr') }}">
            {% for component in form.components %}
                <li>
                    {{ componentForm.printItemRow(component) }}
                </li>
            {% endfor %}
        </ul>
        {{ form_row(form.submit, {
            'attr': {'class': 'btn btn-default'},
            'label': 'Update',
        }) }}
    </div>
    <div class="col-sm-12 col-md-4">
        <div class="form-group">
        {{ form_row(form.image.title, {
                'attr': {'class': 'form-control'},
                'label': 'Image Title',
            }) }}
        </div>
        <div class="form-group">
        {{ form_row(form.image.description, {
                'attr': {'class': 'form-control'},
                'label': 'Image Description',
            }) }}
        </div>
        <div class="form-group">
        {{ form_row(form.image.uploadedfile, {
                'attr': {'class': 'form-control-file'},
                'label': 'Image File',
            }) }}
        </div>
        <h4>Image Tags</h4>
        <ul class="image-tags" data-prototype="{{ itemForm.printItemRow(form.tags.vars.prototype)|e('html_attr') }}">
            {% for tag in form.image.tags %}
                <li>
                    {{ itemForm.printItemRow(tag) }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{{ form_end(form) }}

