 <form action="#" style="max-width: 480px">
    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="{{ project.title }}" id="title">
        </div>
    </div>
    <div class="form-group">
        <label>Description:</label>
        <textarea rows="4" cols="50">{{ project.description }}</textarea>
    </div>
    <h4>Category</h4>
    <div class="edit-container">
        {% for category in project.categories %}
            <div>
                <div>
                    {{ category.name }}
                </div>
                <div>
                    <button type="submit" class="btn btn-danger">delete</button>
                </div> 
            </div>
        {% endfor %}
    </div>
    <h4>Tags</h4>
    <div class="edit-container">
        {% for tag in project.tags %}
            <div> 
                <div> 
                    <label>{{ tag.name }}</label> 
                </div> 
                <div>            
                    <button type="submit" class="btn btn-danger">delete</button>
                </div>
            </div>
        {% endfor %}
    </div>
    <div>
        <div>
            <img src="{{ asset('/img/placeholder.jpg') }}" alt="placeholder" class="rounded">
        </div>
        <div class="edit-container">
            <div>
                <div>
                    <label>Delete the old Image</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-danger">delete</button>
                </div>
            </div>
        </div>
        <div class="edit-container">
            <div>
                <div>
                    <label>Upload a new Image</label>
                </div>
                <div>
                    <button type="submit" class="btn btn-success">Upload</button>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form> 
