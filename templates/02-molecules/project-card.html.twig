
<div class="card bg-light custom-card-layout">
    <img src="{{ project.image.uploadedFile.pathname }}" 
    alt="{{ project.name }} image" class="rounded card-img-top">
    <div class="card-body">
        <h2 class="card-title">{{ project.name }}</h2>
        <p class="card-text">{{ project.description|striptags|slice(0, 200) }}</p>
        <a href="/project/{{ project.slug }}" class="btn btn-primary">Read More</a>
    </div>
</div>